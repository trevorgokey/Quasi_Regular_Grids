#==============================================================================#
#			   Fortran Compiler/Flags
#-O0=no optimization,-O3=full optimization
#==============================================================================#
OBJS=Sobol rej main
FC=gfortran -O2 
#==============================================================================#
#			   	Targets 
#==============================================================================#
all: Sobol rej main

Sobol:
	$(FC) -c sobol.f90

rej:
	$(FC) -c rejection_3D.f90 

main:
	$(FC) -O rejection_3D.o sobol.o 
#==============================================================================#
clean:
	rm -rf *.o *.mod *.out $(OBJS)
