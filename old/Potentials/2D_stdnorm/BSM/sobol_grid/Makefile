#==============================================================================#
#			   Fortran Compiler/Flags
#-O0=no optimization,-O3=full optimization
#==============================================================================#
FC=gfortran 
FFLAGS=-O2
#FFLAGS= -g -O0 -Wall -Wextra -pedantic -fcheck=all -fbacktrace 
#==============================================================================#
#			   	Targets 
#==============================================================================#
all: grid_sobol
#==============================================================================#
#			Compile all Fortran Files
#==============================================================================#
%.o: %.f90
	$(FC) $(FFLAGS) -o $@ -c $^
#==============================================================================#
#				DGB Cluster
#==============================================================================#
grid_sobol: sobol.o sobol_stdnormal.o sobol_grid.o 
	$(FC) -o $@ $^ 
#==============================================================================#
clean:
	rm -rf *.o *.mod grid_sobol
